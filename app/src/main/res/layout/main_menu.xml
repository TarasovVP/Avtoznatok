<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:context=".MainMenu">

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            android:id="@+id/cd1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="9dp"
            card_view:cardBackgroundColor="@color/menu_text"
            app:layout_constraintEnd_toStartOf="@+id/cd2"
            app:layout_constraintBottom_toTopOf="@+id/cd3" app:cardBackgroundColor="@color/avtoznatok_color">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_margin="4dp">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/news">
            </ImageView>
            <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Карточка на кота Василия"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            android:id="@+id/cd2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintStart_toEndOf="@+id/cd1"
            app:layout_constraintBottom_toTopOf="@+id/cd4">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/news">
        </ImageView>
        <TextView
                android:id="@+id/info_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карточка на кота Василия"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".5"
            android:id="@+id/cd3"
            app:layout_constraintBottom_toBottomOf="@+id/cd5"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@+id/cd4"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="263dp"
            app:layout_constraintTop_toBottomOf="@+id/cd1">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/news">
        </ImageView>
        <TextView
                android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карточка на кота Василия"
                android:gravity="center_vertical|center_horizontal|top"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".5"
            android:id="@+id/cd4"
            app:layout_constraintBottom_toBottomOf="@+id/cd6"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/cd3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cd2">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/news"
                android:id="@+id/imageView2">
        </ImageView>
        <TextView
                android:id="@+id/info_text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Карточка на кота Василия"
                android:gravity="center_vertical|center_horizontal|top"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".5"
            android:id="@+id/cd5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@+id/cd6"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="263dp"
            app:layout_constraintTop_toBottomOf="@+id/cd3">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/news">
        </ImageView>
        <TextView
                android:id="@+id/info_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карточка на кота Василия"
                android:gravity="center_vertical|center_horizontal|top"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".5"
            android:id="@+id/cd6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/cd5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cd4">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/news"
                android:id="@+id/imageView6">
        </ImageView>
        <TextView
                android:id="@+id/info_text6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Карточка на кота Василия"
                android:gravity="center_vertical|center_horizontal|top"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>