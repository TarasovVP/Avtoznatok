<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainMenu">

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/cardViewNews"
            android:layout_margin="15dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="9dp"
            card_view:cardBackgroundColor="@color/avtoznatok_color"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="9dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/news">
            </ImageView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news"
                    android:layout_marginBottom="5dp"
                    android:textSize="24sp"
                    android:textColor="@color/avtoznatok_color"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/cardViewMessages"
            android:layout_margin="15dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="9dp"
            card_view:cardBackgroundColor="@color/avtoznatok_color"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="9dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/messages">
            </ImageView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/messages"
                    android:textColor="@color/avtoznatok_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/cardViewSearch"
            android:layout_margin="15dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="parent"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="9dp"
            card_view:cardBackgroundColor="@color/avtoznatok_color"

    >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="9dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/search">
            </ImageView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="@string/search_with_number"
                    android:textColor="@color/avtoznatok_color"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/cd4"
            android:layout_margin="15dp"
            android:layout_marginTop="8dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="9dp"
            card_view:cardBackgroundColor="@color/avtoznatok_color"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintTop_toBottomOf="@+id/guidelineHorizontal"
            app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="9dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/codes">
            </ImageView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="@string/codes_of_regions"
                    android:textColor="@color/avtoznatok_color"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>